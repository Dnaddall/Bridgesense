@page "/map"
@layout MainLayout
@inherits Bridgesense.Pages.MapComponent

@using Radzen
@using Radzen.Blazor
@using Bridgesense.Models.BridgesenseData
<PageTitle>Map</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Map">
    </RadzenHeading>
    <RadzenGoogleMap Center="@(new GoogleMapPosition() { Lat = 52.328837559821395, Lng = 4.958855554433512 })" style="height: 479px" Zoom="12">
      <Markers>
        @foreach (var item in getBridgeResults)
        {
                    var position = new GoogleMapPosition() { Lat = item.latitude, Lng = item.longitude };
                    <RadzenGoogleMapMarker Label=@item.name Position=@position Title=@item.name>
                    </RadzenGoogleMapMarker>
        }
      </Markers>
    </RadzenGoogleMap>
  </ChildContent>
</RadzenContent>
